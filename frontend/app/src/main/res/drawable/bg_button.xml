<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:startColor="#7FBDEA"
    android:centerColor="#A0D8EF"
    android:endColor="#D8C5F3"
    android:angle="45"
    android:type="linear"
    android:useLevel="false" />

    <!-- Bo góc nhỏ hơn -->
    <corners android:radius="8dp" />

    <!-- Padding làm nền nhìn "nhỏ gọn" hơn -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />

    <corners android:radius="16dp" />
</shape>
