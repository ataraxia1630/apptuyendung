<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCompanyName"
            android:text="Company Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCompanyLink"
            android:text="Company Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvTimeRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0000 - 0000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvJobResponsibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JobResponsibility"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="2" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnEditExperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_pen"
        android:contentDescription="Edit"
        android:background="?android:selectableItemBackgroundBorderless"/>
</LinearLayout>
