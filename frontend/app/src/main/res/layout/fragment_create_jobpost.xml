<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header (Không scroll) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CREATE JOBPOST"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <!-- Nội dung scroll -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Job Category -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Job Category" android:textSize="16sp" android:textStyle="bold"/>
            <AutoCompleteTextView
                android:id="@+id/autoJobCategory"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select job category"
                android:inputType="text"/>

            <!-- Job Type -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Job Type" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <AutoCompleteTextView
                android:id="@+id/autoJobType"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select job type"
                android:inputType="text"/>

            <!-- Title -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Title" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtTitle"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter job title"/>

            <!-- Description -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Description" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter job description"
                android:minLines="4"
                android:gravity="top"
                android:inputType="textMultiLine"/>

            <!-- Location -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Location" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Enter job location"/>

            <!-- Position -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Position" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="Enter job position"/>

            <!-- Working Address -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Working Address" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtWorkingAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter working address"/>

            <!-- Education Requirement -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Education Requirement" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter education requirement"/>

            <!-- Skill Requirement -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Skill Requirement" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtSkillRequirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter skill requirement"/>

            <!-- Responsibility -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Responsibility" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtResponsibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter responsibility"/>

            <!-- Salary Start -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Salary Start" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtSalaryStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter starting salary"
                android:inputType="numberDecimal"/>

            <!-- Salary End -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Salary End" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtSalaryEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter ending salary"
                android:inputType="numberDecimal"/>

            <!-- Currency -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Currency" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtCurrency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter currency (e.g. USD)"/>

            <!-- Status -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Status" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="e.g. OPENING"/>

            <!-- Apply Until -->
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="Apply Until" android:textSize="16sp" android:textStyle="bold"
                android:paddingTop="8dp"/>
            <EditText
                android:id="@+id/edtApplyUntil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:padding="12dp"
                android:textSize="16sp"
                android:hint="Enter deadline (dd-mm-yyyy)"/>

            <!-- Save Button -->
            <Button
                android:id="@+id/btnSaveJob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Job"
                android:layout_marginTop="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
