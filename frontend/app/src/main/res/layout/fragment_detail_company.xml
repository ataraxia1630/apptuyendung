<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD">

    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layoutBottomButtons"
        android:background="#FDFDFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Job Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About us"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtAboutUs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is job description..."
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="#444444" />

            <Button
                android:id="@+id/btnReadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read more"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"
                android:backgroundTint="#EEEEEE" />

            <!-- Contact Information -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Information"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtContactInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ This is a responsibility..."
                android:textSize="14sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Related Jobs"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="24dp"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerJobPosts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons Row -->
    <LinearLayout
        android:id="@+id/layoutBottomButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:weightSum="1">

        <!-- Follow Button -->
        <Button
            android:id="@+id/btnFollow"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.8"
            android:text="Follow"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0090FF"
            android:drawableStart="@drawable/ic_bookmark"
            android:drawablePadding="8dp" />

        <!-- Chat Button -->
        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="0.2"
            android:src="@drawable/ic_chat"
            android:contentDescription="Chat"
            android:scaleType="centerInside"
            android:background="@drawable/button_lightviolet" />
    </LinearLayout>
</RelativeLayout>
