<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ui.view.main.JobpostFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Tab + Add Button cùng hàng -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tabTextAppearance="@style/CustomTabText"
                app:tabSelectedTextColor="#004E8B"
                app:tabTextColor="#888888"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/btnAdd"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/btnAdd"
                android:src="@drawable/ic_add"
                android:background="@android:color/transparent"
                android:contentDescription="Thêm"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <!-- Nội dung tùy theo tab -->
        <FrameLayout
            android:id="@+id/frameContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <!-- Layout JOBPOST -->
            <LinearLayout
                android:id="@+id/layoutJobPost"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- RecyclerView JobPosts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerJobPosts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <!-- Layout POST -->
            <LinearLayout
                android:id="@+id/layoutPost"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <!-- RecyclerView Posts -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerPosts"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
